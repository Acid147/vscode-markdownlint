{
	"name": "vscode-markdownlint",
	"displayName": "markdownlint",
	"description": "Markdown linting and style checking for Visual Studio Code",
	"icon": "images/markdownlint-128.png",
	"version": "0.4.1",
	"author": "David Anson (http://dlaa.me/)",
	"publisher": "DavidAnson",
	"license": "MIT",
	"homepage": "https://github.com/DavidAnson/vscode-markdownlint",
	"repository": {
		"type": "git",
		"url": "https://github.com/DavidAnson/vscode-markdownlint.git"
	},
	"bugs": "https://github.com/DavidAnson/vscode-markdownlint/issues",
	"scripts": {
		"postinstall": "node ./node_modules/vscode/bin/install",
		"lint": "eslint *.js",
		"schema": "node generate-config-schema.js"
	},
	"categories": [
		"Linters"
	],
	"engines": {
		"vscode": "^0.10.8"
	},
	"main": "./extension",
	"dependencies": {
		"markdownlint": "^0.2.0",
		"opn": "^4.0.2"
	},
	"devDependencies": {
		"eslint": "^3.1.0",
		"tv4": "^1.2.7",
		"vscode": "^0.11.14"
	},
	"keywords": [
		"markdown",
		"lint",
		"md"
	],
	"activationEvents": [
		"onLanguage:markdown"
	],
	"contributes": {
		"jsonValidation": [{
			"fileMatch": ".markdownlint.json",
			"url": "./config-schema.json"
		}]
	}
}
